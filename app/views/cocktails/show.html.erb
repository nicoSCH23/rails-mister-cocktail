
<div class="container not-home-container">
  <div class="row">
    <%#= link_to 'Add a dose',  edit_restaurant_path, class: 'btn btn-primary btn-edit' %>
    <div class="col-md-8 col-md-offset-2">
        <h1 class="text-center"><%= @cocktail.name %></h1>
      <div class="description">
        <img class= "editor center-block" src=<%= @cocktail.pictureurl %>>
        <div class="desc">
          <ul>
            <% @doses.each do |dose| %>
            <li><%= dose.description %> <%= dose.ingredient.name %> -               <%= link_to dose_path(dose),
                      method: :delete,
                      data: { confirm: "Are you sure?"} do %>
                        <i class="fa fa-trash" aria-hidden="true"></i>
                      <% end %></li>
            <%end  %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4"">
      <hr>
      <p class="text-center"><%#= link_to 'Write a review', new_restaurant_review_path(@restaurant) %> <%= link_to 'Back to home', cocktails_path %></p>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <h2>Add a dose</h2>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient, collection: Ingredient.order(:name), prompt: "Choose an ingredient" %>
          <%= f.submit "Add Dose", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


