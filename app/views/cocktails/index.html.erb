<div class="home-banner">
  <div class="banner-content">
    <h1>Cocktails Mapper</h1>
    <p>Have a drink!</p>
    <br><br><br>
    <%= link_to 'Create a new cocktail', new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cocktail.pictureurl %>);">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
            <div class="delete">
              <%= link_to cocktail_path(cocktail.id),
              method: :delete,
              data: { confirm: "Are you sure?"} do %>
                <i class="fa fa-trash" aria-hidden="true"></i>
              <% end %>
            </div>
          </div>
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
          <%= link_to '', cocktail_path(cocktail), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

