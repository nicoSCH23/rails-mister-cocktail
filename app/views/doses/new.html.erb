
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 offset-md-3">
      <h1>Create a new dose</h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient, input_html: { class: "select2" } %>
        <%= f.submit "Add cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
